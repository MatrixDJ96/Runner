<Window x:Class="Runner.Windows.UpdaterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Runner"
        mc:Ignorable="d"
        Style="{DynamicResource BaseWindow}"
        Title="Updater" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Loaded="UpdaterWindow_Loaded">
    <StackPanel Margin="10,5,10,5">
        <ProgressBar x:Name="DownloadProgressBar" Height="30" Width="200" Margin="0,0,0,5"/>
        <Button Style="{DynamicResource BaseButton}" x:Name="AbortButton" Margin="0,5,0,0" HorizontalAlignment="Left" Click="AbortButton_Click">Annulla</Button>
    </StackPanel>
</Window>
